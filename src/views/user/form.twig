{% extends '../base.twig' %}
{% block content %}
    
    <div class="mt-5 align-items-center col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">

        <form method="POST" class="col-md-12">
            <div class="form-group bmd-form-group w-100">
                <label for="username" class="bmd-label-floating">Username</label>
                <input type="text" class="form-control form-control-lg" id="username" name="username" value="{{user.username}}">
            </div>
            <div class="form-group bmd-form-group w-100">
                <label for="password" class="bmd-label-floating">Password</label>
                <input type="password" class="form-control form-control-lg" id="password" name="password">
            </div>
            
            <button type="submit" class="btn btn-primary btn-block btn-raised">{{submit}}</button>
        </form>
    </div>
{% endblock %}